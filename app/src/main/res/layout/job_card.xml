<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvIdJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="#152642"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linStatusJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:background="@drawable/bg_oval"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_clock" />

                    <TextView
                        android:id="@+id/tvStatusJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:text="งานวันนี้"
                        android:textColor="#ffffff" />
                </LinearLayout>


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#838383" />

            <LinearLayout
                android:id="@+id/linExpTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เหลือเวลารับงาน " />

                <TextView
                    android:id="@+id/tvExpTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25:00 นาที"
                    android:textColor="@color/colorRed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="เวลานัดหมาย : "
                        android:textColor="#2b2b2b"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:text="2016-10-29 17:20 น."
                        android:textColor="#2b2b2b"
                        android:textSize="16sp" />

                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <FrameLayout
                        android:id="@+id/frameFrom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true">


                        <ImageView
                            android:id="@+id/imgViewFrom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/oval_btn_from" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <TextView

                        android:id="@+id/tvTextPositionFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@+id/frameFrom"
                        android:text="ต้นทาง :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPositionFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:paddingStart="108dp"
                        android:text="ตำบล บ้านดู่ อำเภอเมืองเชียงราย, เชียงราย 57100"
                        android:textColor="#2b2b2b"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <FrameLayout
                        android:id="@+id/frameTo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true">


                        <ImageView
                            android:id="@+id/imgViewTo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/oval_btn_to" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="B"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/tvTextPositionTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@+id/frameTo"
                        android:text="ปลายทาง :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPositionTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:paddingStart="108dp"
                        android:text="ตำบล นางแล อำเภอเมืองเชียงราย, เชียงราย 57100"
                        android:textColor="#2b2b2b"
                        android:textSize="15sp" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#838383" />

            <TextView
                android:id="@+id/tvServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="ค่าบริการ ฿ 200"
                android:textColor="#4bb765"
                android:textSize="18sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnDetail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="10dp"
                android:paddingEnd="60dp"
                android:paddingStart="50dp"
                android:paddingTop="10dp"
                fancy:fb_defaultColor="#55acee"
                fancy:fb_focusColor="#8cc9f8"
                fancy:fb_radius="3dp"
                fancy:fb_text="ดูรายละเอียด"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="16sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnGo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="10dp"
                android:paddingEnd="80dp"
                android:paddingStart="80dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/newColorGreenNormal"
                fancy:fb_focusColor="@color/newColorGreenPress"
                fancy:fb_radius="5dp"
                fancy:fb_text="เริ่มเดินทาง"
                fancy:fb_textColor="#FFFFFF" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>