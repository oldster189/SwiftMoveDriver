<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9ebee">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/linStatusJob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_oval"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img1"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="8dp"
                                    android:src="@drawable/ic_clock" />

                                <TextView
                                    android:id="@+id/tvStatusJob"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingBottom="8dp"
                                    android:paddingEnd="16dp"
                                    android:paddingStart="16dp"
                                    android:paddingTop="8dp"
                                    android:text="งานวันนี้"
                                    android:textColor="#ffffff" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvDateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="2016-10-29 17:20 น."
                                android:textColor="#2b2b2b"
                                android:textSize="16sp" />


                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/newColorGrayD4" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">

                            <ImageView
                                android:id="@+id/imgViewTypeCar"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_type_car" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@id/imgViewTypeCar"
                                android:text="ประเภทรถ"
                                android:textColor="@color/colorTextHead"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvTypeCar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="กระบะ"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">

                            <ImageView
                                android:id="@+id/imgViewDriver"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_user" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@id/imgViewDriver"
                                android:text="ผู้ใช้บริการ"
                                android:textColor="@color/colorTextHead"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="คุณ อิทธิพล วิวัฒนสถิต"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">

                            <ImageView
                                android:id="@+id/imgViewDistance"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_distance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@id/imgViewDistance"
                                android:text="ระยะทางทั้งหมด"
                                android:textColor="@color/colorTextHead"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="5.045 กม."
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/newColorGrayD4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp">

                                <FrameLayout
                                    android:id="@+id/frameFrom"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerVertical="true">


                                    <ImageView
                                        android:id="@+id/imgViewFrom"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/oval_btn_from" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="A"
                                        android:textColor="#ffffff"
                                        android:textStyle="bold" />
                                </FrameLayout>

                                <TextView

                                    android:id="@+id/tvTextPositionFrom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="4dp"
                                    android:layout_toEndOf="@+id/frameFrom"
                                    android:text="ต้นทาง :"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tvPositionFrom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:paddingStart="108dp"
                                    android:text="ตำบล บ้านดู่ อำเภอเมืองเชียงราย, เชียงราย 57100"
                                    android:textColor="#2b2b2b"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp">

                                <FrameLayout
                                    android:id="@+id/frameTo"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerVertical="true">


                                    <ImageView
                                        android:id="@+id/imgViewTo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/oval_btn_to" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="B"
                                        android:textColor="#ffffff"
                                        android:textStyle="bold" />
                                </FrameLayout>


                                <TextView
                                    android:id="@+id/tvTextPositionTo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="4dp"
                                    android:layout_toEndOf="@+id/frameTo"
                                    android:text="ปลายทาง :"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tvPositionTo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:paddingStart="108dp"
                                    android:text="ตำบล นางแล อำเภอเมืองเชียงราย, เชียงราย 57100"
                                    android:textColor="#2b2b2b"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/tvMap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:paddingBottom="8dp"
                                android:paddingEnd="16dp"
                                android:paddingStart="0dp"
                                android:paddingTop="8dp"
                                fancy:fb_defaultColor="@color/colorOrangeNormal"
                                fancy:fb_focusColor="@color/colorOrangePress"
                                fancy:fb_iconResource="@drawable/ic_map_white"
                                fancy:fb_radius="3dp"
                                fancy:fb_text="@string/click_view_map"
                                fancy:fb_textColor="#ffffff" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/newColorGrayD4" />

                        <LinearLayout
                            android:layout_marginBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_marginEnd="4dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/imgView1"
                                    android:layout_width="108dp"
                                    android:layout_height="108dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_picture" />

                            </FrameLayout>

                            <FrameLayout
                                android:layout_marginEnd="4dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/imgView2"
                                    android:layout_width="108dp"
                                    android:layout_height="108dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_picture" />


                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">


                                <ImageView
                                    android:id="@+id/imgView3"
                                    android:layout_width="108dp"
                                    android:layout_height="108dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_picture" />


                            </FrameLayout>


                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="70dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="รายการ"
                            android:textColor="#2b2b2b"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:id="@+id/tvChargeStartKm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ราคาเริ่มต้น (0 - 5 กม.)"
                                android:textColor="@color/colorTextHead"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvChargeStartPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="฿ 200.00"
                                android:textSize="16sp" />
                        </FrameLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="คิดตามระยะทาง"
                                android:textColor="@color/colorTextHead"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvChargePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="฿ 202.02"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvChargeKm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvChargePrice"
                                android:text="ระยะทาง (15.540 กม.)"
                                android:textColor="#4bb765"
                                android:textSize="12sp" />
                        </RelativeLayout>


                        <FrameLayout
                            android:id="@+id/frameLift"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="คนขับช่วยยกของ"
                                android:textColor="@color/colorTextHead"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvServiceLift"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="ฟรี"
                                android:textSize="15sp" />
                        </FrameLayout>


                        <RelativeLayout
                            android:id="@+id/frameLiftPlus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ผู้ช่วยยกของไม่รวมคนขับ"
                                android:textColor="@color/colorTextHead"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvServiceLiftPlusPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="฿ 0"
                                android:textSize="15sp" />

                        </RelativeLayout>


                        <FrameLayout
                            android:id="@+id/frameCart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="รถเข็น"
                                android:textColor="@color/colorTextHead"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvServiceCartPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="฿ 0"
                                android:textSize="15sp" />
                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/newColorGrayD4" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/tvListTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="฿ 0"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="รวม"
                                android:textColor="@color/colorTextHead"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/toolbar_dropshadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnGo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="56dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:visibility="visible"
                fancy:fb_defaultColor="@color/newColorGreenNormal"
                fancy:fb_focusColor="@color/newColorGreenPress"
                fancy:fb_radius="5dp"
                fancy:fb_text="เริ่มเดินทาง"
                fancy:fb_textColor="#ffffff" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:visibility="gone"
                fancy:fb_borderColor="@color/newColorGreenNormal"
                fancy:fb_borderWidth="2dp"
                fancy:fb_defaultColor="#00000000"
                fancy:fb_focusColor="@color/newColorGrayD4"
                fancy:fb_radius="5dp"
                fancy:fb_text="ไม่รับงาน"
                fancy:fb_textColor="@color/newColorGreenNormal" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:visibility="gone"
                fancy:fb_defaultColor="@color/newColorGreenNormal"
                fancy:fb_focusColor="@color/newColorGreenPress"
                fancy:fb_radius="5dp"
                fancy:fb_text="รับงาน"
                fancy:fb_textColor="#FFFFFF" />
        </LinearLayout>
    </FrameLayout>
</layout>