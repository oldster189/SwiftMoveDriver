<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_home_up</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.Red">
        <item name="fab_colorNormal">#f44336</item>
        <item name="fab_colorPressed">#f46e64</item>
        <item name="fab_colorRipple">#f23c2f</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#8bc34a</item>
        <item name="fab_colorPressed">#91c257</item>
        <item name="fab_colorRipple">#76c21d</item>
    </style>

    <style name="MenuButtonsSmall.Yellow">
        <item name="fab_colorNormal">#ffc107</item>
        <item name="fab_colorPressed">#ffd556</item>
        <item name="fab_colorRipple">#d19d00</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
    </style>
    <style name="foodRatingBar3" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars3</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>
</resources>
